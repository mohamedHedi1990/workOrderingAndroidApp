<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="fill_parent"

            android:orientation="vertical"
            android:layout_height="fill_parent" tools:ignore="MissingConstraints"
            android:padding="0px"
            android:background="@drawable/border"
            android:paddingTop="0dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"

            android:gravity="right"
            android:paddingBottom="50px"
    >
        <ImageView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:id="@+id/imageView"
                android:src="@drawable/ggg"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:gravity="center"
        android:paddingTop="10dp"
       />
        <LinearLayout
                android:layout_width="fill_parent"

                android:orientation="horizontal"
                android:layout_height="wrap_content" tools:ignore="MissingConstraints"
                android:padding="0px"

                >
            <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nesrine Riahi"
                    android:paddingTop="8dp"
                    android:textSize="8pt"
            android:paddingLeft="85dp"/>
            <TextView
                    android:id="@+id/disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disconnect"
                    android:textSize="5pt"
                    android:paddingLeft="25dp"
                    />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"

                android:orientation="vertical"
                android:layout_height="fill_parent" tools:ignore="MissingConstraints"
        android:padding="50px"
                android:background="@drawable/border"
        android:paddingTop="30dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints"
            android:gravity="right">

        </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"

                          android:orientation="vertical"
                          android:layout_height="wrap_content" tools:ignore="MissingConstraints"
                          android:padding="10px"
                          android:background="@drawable/border"
                          android:paddingTop="30dp">

            <TextView
                    android:id="@+id/intervTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="10pt">
            </TextView>
            <EditText
                    android:id="@+id/intervTitleText_create"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent">
            </EditText>
            <TextView
                    android:id="@+id/intervClient_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client"
                    android:textSize="10pt">
            </TextView>
            <EditText
                    android:id="@+id/intervClientText_create"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent">
            </EditText>
            <TextView
                    android:id="@+id/intervType_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="10pt">
            </TextView>
            <EditText
                    android:id="@+id/intervTypeText_create"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:layout_width="fill_parent">
            </EditText>

            <TextView
                    android:id="@+id/intervDescription_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="10pt">
            </TextView>
           <EditText
            android:id="@+id/intervDescriptionText_create"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent">
        </EditText>

            <TextView
                    android:id="@+id/intervDate_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date souhaitable de l'intervention"
                    android:textSize="10pt"
            android:clickable="true">
            </TextView>
            <EditText
                    android:id="@+id/intervDateText_create"
                    android:layout_height="wrap_content"
                    android:hint=""

                    android:layout_width="fill_parent"
                    android:clickable="true">
            </EditText>
            </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent" tools:ignore="MissingConstraints"
    android:gravity="center">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/submit"
                android:layout_alignParentBottom="true"

        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return"
                android:id="@+id/returnButton"

                android:layout_alignParentBottom="true"

        />
    </LinearLayout>




        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>